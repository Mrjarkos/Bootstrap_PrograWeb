
@{
    ViewBag.Title = "Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Usuarios <small>Listar</small></h2>
<section class="widget">
    <header>
        <h4>
           Usuarios en la base de datos
        </h4>
        <div class="widget-controls">
            <a data-widgster="expand" title="Expandir" href="#"><i class="glyphicon glyphicon-plus"></i></a>
            <a data-widgster="collapse" title="Colapsar" href="#"><i class="glyphicon glyphicon-minus"></i></a>
            <a data-widgster="close" title="Cerrar" href="#"><i class="glyphicon glyphicon-remove"></i></a>
        </div>
    </header>
    <div class="widget-table-overflow">
        <table id="myTable" class="table table-striped table-lg mt-sm mb-0 sources-table">
            <thead>
                <tr>
                    <th class="source-col-header">Dia</th>
                    <th>Promedio °C</th>
                    <th>Cambio dia anterior</th>
                    <th class="hidden-xs">Min °C</th>
                    <th>Max °C</th>
                    <th class="chart-col-header hidden-xs">Gráfica</th>
                </tr>
            </thead>    
            <tbody>
                <tr>
                    <td><span class="label label-important">Lunes</span></td>
                    <td>20</td>
                    <td><strong class="color-green">+1.2</strong></td>
                    <td class="hidden-xs">12</td>
                    <td>25</td>
                    <td class="chart-cell hidden-xs">
                        <div id="direct-trend"></div>
                    </td>
                </tr>
                <tr>
                    <td><span class="label label-warning">Martes</span></td>
                    <td>20</td>
                    <td><strong>0</strong></td>
                    <td class="hidden-xs">15</td>
                    <td>28</td>
                    <td class="chart-cell hidden-xs">
                        <div id="refer-trend"></div>
                    </td>
                </tr>
                <tr>
                    <td><span class="label label-success">Miercoles</span></td>
                    <td>18</td>
                    <td><strong class="color-red">-2</strong></td>
                    <td class="hidden-xs">10</td>
                    <td>24</td>
                    <td class="chart-cell hidden-xs">
                        <div id="social-trend"></div>
                    </td>
                </tr>
                <tr>
                    <td><span class="label label-info">Jueves</span></td>
                    <td>23</td>
                    <td><strong class="color-green">+5</strong></td>
                    <td class="hidden-xs">19</td>
                    <td>25</td>
                    <td class="chart-cell hidden-xs">
                        <div id="search-trend"></div>
                    </td>
                </tr>
                <tr>
                    <td><span class="label label-inverse">Viernes</span></td>
                    <td>23</td>
                    <td><strong>0</strong></td>
                    <td class="hidden-xs">19</td>
                    <td>28</td>
                    <td class="chart-cell hidden-xs">
                        <div id="internal-trend"></div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</section>


